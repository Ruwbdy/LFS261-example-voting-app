pipeline {
    agent any

    tools {
        maven 'maven 3.9.9'
    }

    stages {
        stage("build") {
            when {
                changeset "**/result/**"
            }
            steps {
                echo 'Compiling result app..'
                dir('result') {
                    sh 'mvn compile'
                }
            }
        }
        stage("test") {
            when {
                changeset "**/result/**"
            }
            steps {
                echo 'Running Unit Test on result app..'
                dir('result') {
                    sh 'mvn clean test'
                }
            }
        }
    }

    post {
        always {
            echo 'Building multibranch pipeline for worker is completed..'
        }
    }
}

